    "@openzeppelin/test-helpers": "^0.5.6",
    "@openzeppelin/contracts": "^4.3.2",
    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.0.0",
    "ethereumjs-util": "^7.0.7",
    "ethers": "^5.0.0",
    "hardhat": "^2.0.2",
    "hardhat-deploy": "^0.9.0",
    "hardhat-deploy-ethers": "^0.3.0-beta.7",
